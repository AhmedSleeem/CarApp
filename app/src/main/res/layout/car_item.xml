<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeColor="@color/overlayGray"
    app:strokeWidth="@dimen/_4dp"
    card_view:cardCornerRadius="@dimen/_15dp"
    card_view:cardElevation="@dimen/_4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media -->
        <ImageView
            android:id="@+id/carImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_194dp"

            android:contentDescription="@string/this_is_image"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/carplaceholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_9dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:id="@+id/brandNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brandName"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/constructionYearTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6dp"
                android:text="@string/constructionyeartext"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/isUsedTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6dp"
                android:text="@string/isused"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

